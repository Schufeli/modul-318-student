<Window x:Class="SwissTransportView.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SwissTransportView"
        xmlns:control="clr-namespace:SwissTransportView.Controls"
        mc:Ignorable="d"
        Title="SwissTransport" Height="450" Width="600" ResizeMode="NoResize"
        Icon="/Assets/train.ico">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="52" />
            <RowDefinition Height="52" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <control:StationSearchBox Grid.Column="0" Grid.Row="0" Height="26"/>
        <control:StationSearchBox Grid.Column="1" Grid.Row="0" Height="26"/>
    </Grid>
</Window>
